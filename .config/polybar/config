;Granny Smith Apple
alert-alt = #A0E8A2


[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 20
radius = 10
;offset-x = 2,5%
fixed-center = true
top = true
enable-ipc = true

