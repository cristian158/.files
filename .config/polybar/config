; cursor-scroll = ns-resize



; WORKSPACES
[module/bspwm]
type = internal/bspwm

label-focused = %index%
;label-focused-underline= ${colors.primary}
label-focused-foreground = #BA1866
label-focused-padding = 2

label-occupied = %index%
label-occupied-foreground = ${colors.foreground-alt}
label-occupied-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.primary} 
label-empty-padding = 2



;MPD
[module/mpd]
type = internal/mpd
host = 127.0.0.1 
port = 6601

; seconds to sleep between progressbar/song timer sync, Default:1
interval = 2

format-online =  --|  <label-song>  |--  <icon-prev>  <icon-stop>  <toggle>  <icon-next>
format-online-foreground = ${colors.alert}
format-online-padding = 20

icon-prev ="  "
icon-stop ="  "
icon-play ="  "
icon-pause ="  "
icon-next ="  "

;label-offline = mpd is offline
;format-offline = <label-offline>
format-offline = *

;DATE
[module/date]
type = internal/date
interval = 1

time = %H:%M
time-alt = %Y:%m:%d

label = %time%



[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume =    %{T1}%percentage%%%{T-i} 
label-volume-foreground = #BA1866

label-muted = "     "
label-muted-foreground = #666

click-right = pulsemixer &



;BATTERY
[module/battery]
type = internal/battery

; Command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC0
full-at = 99

format-charging = <animation-charging>  <label-charging>
format-charging-padding = 1
format-charging-foreground = ${colors.alert-alt}
label-charging = %percentage%%

animation-charging-framerate = 1000
animation-charging-0 = " " 
animation-charging-1 = " "
animation-charging-2 = " "
animation-charging-3 = " "
animation-charging-4 = " "


format-discharging = <ramp-capacity> <label-discharging>
format-discharging-padding = 1
format-discharging-foreground = ${colors.alert-alt}
label-discharging = %percentage%%

ramp-capacity-0 = " "
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-3 = " "
ramp-capacity-4 = " "

