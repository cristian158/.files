;font-0 = "DejaVu Sans:style=Book:size=8;2"
;font-1 = "polyfont:style=Regular:pixelsize=8:antialias=true;1"
;font-1 = "FontAwesome:size=9;2"
font-1 = "Symbols Nerd Font:style=2048-em:size=9;2"

modules-left = bspwm 
modules-center = mpd
